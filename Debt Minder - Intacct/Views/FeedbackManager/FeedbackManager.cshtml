</head>


<body class="bg-gray-100 p-6">
    <div style="height: 20px"></div>
    <h1 class="text-2xl font-bold mb-6" style="color: black">@ViewData["Title"]</h1>

    <!-- Capture New Feedback Section -->
    <div class="bg-white p-6 border border-gray-200 rounded-md mb-6">
        <h2  class="text-lg font-semibold mb-4">Capture New Feedback</h2>
        <form id="feedbackForm" asp-action="SaveFeedback" asp-controller="FeedbackManager" method="post" class="flex flex-col gap-4">
            <input type="hidden" id="CustomerId" value="@Model.CustomerId" />
            <div class="flex gap-4">
                <div class="flex-1">
                    <label for="Type" class="block text-sm font-medium text-lg" >Type</label>
                    <select id="Type" name="Type" style="color: black" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required>
                        @foreach (var type in Model.TypeOptions)
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                </div>
                <div class="flex-1">
                    <label for="ReferenceSelection" class="block text-sm font-medium text-lg">Reference Selection</label>
                    <select id="ReferenceSelection" name="ReferenceSelection" style="color: black" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required>
                        @foreach (var reference in Model.ReferenceOptions)
                        {
                            <option value="@reference">@reference</option>
                        }
                    </select>
                </div>
                <div class="flex-1">
                    <label for="Outstanding" class="block text-sm font-medium text-lg">Outstanding</label>
                    <input type="text" id="Outstanding" name="Outstanding" style="color: black" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required />
                </div>
                <div class="flex-1">
                    <label for="PTPAmount" class="block text-sm font-medium text-lg">PTP Amount</label>
                    <input type="text" id="PTPAmount" name="PTPAmount" style="color: black" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required />
                </div>
            </div>
            <div class="flex gap-4">
                <div class="flex-1">
                    <label for="notes" class="block text-sm font-medium text-lg">Notes</label>
                    <div id="notes" contenteditable="true" class="mt-1 block w-full bg-white rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" ></div>
                    <input id="hiddenNotes" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" name="Notes" style="color: black; background: white;" />
                </div>
                <div class="flex-1">
                    <label for="Date" class="block text-sm font-medium text-lg">Date</label>
                    <input type="date" id="Date" name="Date" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" style="color: black" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                </div>
            </div>
            <div class="flex justify-end gap-2 mt-4">
                <button type="button" class="btn btn-primary2" onclick="location.href='@Url.Action("Close", "FeedbackManager")'">Close</button>
                <button type="button" id="deleteButton" class="btn btn-primary2">Delete</button>
                <button type="button" id="newButton" class="btn btn-primary2">New</button>
                <button type="submit" class="btn btn-primary2">Save</button>
            </div>
        </form>
    </div>

    <!-- Feedback History Section -->
    <div class="bg-white p-6 border border-gray-200 rounded-md">
        <h2 class="text-lg font-semibold mb-4">Feedback History</h2>
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-gray-200">
                    <th class="p-2 border">Display</th>
                    <th class="p-2 border">Id</th>
                    <th class="p-2 border">Type</th>
                    <th class="p-2 border">Code</th>
                    <th class="p-2 border">Reference</th>
                    <th class="p-2 border">Outstanding Amount</th>
                    <th class="p-2 border">PTP Amount</th>
                    <th class="p-2 border">Contact Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FeedbackHistory)
                {
                    <tr class="border-t">
                        <td class="p-2">
                            <input type="checkbox" class="history-checkbox" @(item.Display ? "checked" : "") />
                        </td>
                        <td class="p-2">@item.Id</td>
                        <td class="p-2">@item.Type</td>
                        <td class="p-2">@item.Code</td>
                        <td class="p-2">@item.Reference</td>
                        <td class="p-2">@item.OutstandingAmount</td>
                        <td class="p-2">@item.PTPAmount</td>
                        <td class="p-2">@item.ContactDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {

            // Update hidden input with notes content
            $('#notes').on('input', function () {
                $('#hiddenNotes').val($(this).html());
            });

            // Checkbox change event
            $('.history-checkbox').change(function () {
                var row = $(this).closest('tr');
                var id = row.find('td:eq(1)').text();
                var customerId = $('#CustomerId').val();

                $.ajax({
                    url: '@Url.Action("UpdateCheckbox", "FeedbackManager")',
                    type: 'POST',
                    data: {CustomerId: customerId, ContactId:id},
                    success: function (response) {
                        console.log('Checkbox updated:', response);
                    }
                });
            });

            // Double-click event on table row
            $('table tbody tr').on('dblclick', function () {
                var row = $(this);
                var type = row.find('td:eq(2)').text().trim();
                var code = row.find('td:eq(3)').text().trim();
                var reference = row.find('td:eq(4)').text().trim();
                var outstanding = row.find('td:eq(5)').text().trim();
                var amount = row.find('td:eq(6)').text().trim();
                var date = row.find('td:eq(7)').text().trim();

                var typeValue = code + ' - ' + type;

                // Format date to yyyy-MM-dd
                var parts = date.split(/[\/\-\.]/);
                var formattedDate = '';
                if (parts.length === 3) {
                    let day = parts[0], month = parts[1], year = parts[2];
                    if (parseInt(month) > 12) {
                        [day, month] = [month, day];
                    }
                    formattedDate = `${year}-${month.padStart(2, '0')}-${day.padStart(2, '0')}`;
                }

                $('#Type').val(typeValue);
                $('#ReferenceSelection').val(reference);
                $('#Outstanding').val(outstanding);
                $('#PTPAmount').val(amount);
                $('#Date').val(formattedDate);
                $('#notes').html("");
                $('#hiddenNotes').val("");
            });

            // Delete button click event
            $('#deleteButton').on('click', function () {
                var type = $('#Type').val();
                var reference = $('#ReferenceSelection').val();
                var customerId = $('#CustomerId').val();
                var date = $('#Date').val();

                if (!type || !customerId) {
                    alert("Missing required information for delete.");
                    return;
                }

                if (!confirm("Are you sure you want to delete this feedback entry?")) {
                    return;
                }

                $.ajax({
                    url: '@Url.Action("DeleteFeedback", "FeedbackManager")',
                    type: 'POST',
                    data: {
                        Type: type,
                        CustomerId: customerId,
                        Date: date
                    },
                    success: function (response) {
                        alert("Feedback deleted successfully.");
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        alert("Error deleting feedback: " + error);
                    }
                });
            });

            // new record
                $('#newButton').on('click', function () {
                $('#Type').val("");
                $('#ReferenceSelection').val("");
                $('#Outstanding').val("");
                $('#PTPAmount').val("");
                $('#Date').val("");
                $('#notes').html("");
                $('#hiddenNotes').val("");
            });

            // Form submission with validation
            $('#feedbackForm').on('submit', function (event) 
            {
                event.preventDefault();

                var type = $('#Type').val();
                var reference = $('#ReferenceSelection').val();
                var outstanding = $('#Outstanding').val().trim();
                var ptpAmount = $('#PTPAmount').val().trim();
                var date = $('#Date').val();
                var notes = $('#hiddenNotes').val().trim();
                var customerId = $('#CustomerId').val().trim();

                if (!type || !reference || !outstanding || !ptpAmount || !date || !notes) {
                    alert('Please fill in all fields.');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("SaveFeedback", "FeedbackManager")',
                    type: 'POST',
                    data: {
                        Type: type,
                        ReferenceSelection: reference,
                        Outstanding: outstanding,
                        PTPAmount: ptpAmount,
                        Date: date,
                        Notes: notes,
                        CustomerId: customerId
                    },
                    success: function (response) {
                        alert('Feedback saved successfully!');
                        window.location.href = '@Url.Action("Index", "Home")';
                    },
                    error: function (xhr, status, error) {
                        alert('Error saving feedback: ' + error);
                    }
                });
            });

        });
    </script>
</body>
</html>