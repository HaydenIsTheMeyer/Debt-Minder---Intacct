@model DocumentManagerViewModel

@{
    ViewData["Title"] = $"{Model.CustomerName} - Document Manager";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/StyleIndex.css" asp-append-version="true" />

    <style>
        #notes {
            min-height: 200px;
            padding: 8px;
            border: 1px solid #d1d5db;
            border-radius: 0.375rem;
            outline: none;
            overflow-y: auto;
        }
    </style>


</head>
<body>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-8">
    <div style="height: 20px"></div>
    <header>
        <h1 class="text-3xl font-extrabold text-gray-900">@ViewData["Title"]</h1>
    </header>

    <!-- New Document Attachment Section -->
    <section class="bg-white shadow-sm border border-gray-200 rounded-xl p-6 space-y-6">
        <h2 class="text-xl font-semibold text-gray-800">New Document Attachment</h2>

        <form id="DocsForm" asp-action="SaveAttachment" asp-controller="DocumentManager" method="post" class="flex flex-col gap-4">
                <input type="hidden" id="CustomerId" name="CustomerId" value="@Model.CustomerId" />
                <input type="hidden" id="DocId" name="DocId" value="" />
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Doc Type -->
                <div>
                    <label for="DocType" style="color: white" class="block text-sm font-medium text-gray-700">Doc Type</label>
                    <select id="DocType" name="DocType" class="mt-1 w-full p-2 border border-gray-300 rounded-md" required>
                        @foreach (var type in Model.TypeOptions)
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                </div>

                    <!-- File Input -->
                    <div>
                        <label for="FileInput" id="FilePath" style="color: white"  class="block text-sm font-medium text-gray-700">File</label>
                        <input type="file" id="FileInput" name="File" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required />
                        <small id="existingFileName" class="text-muted"></small>
                    </div>

                <!-- Reference -->
                <div>
                        <label for="Reference" style="color: white" class="block text-sm font-medium text-gray-700">Reference</label>
                    <select id="Reference" name="Reference" class="mt-1 w-full p-2 border border-gray-300 rounded-md" required>
                        @foreach (var reference in Model.ReferenceOptions)
                        {
                            <option value="@reference">@reference</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex justify-end gap-3 mt-6">
                    <button type="button" class="btn btn-primary2" onclick="location.href='@Url.Action("Close", "DocumentManager")'">Close</button>
                    <button type="button" id="deleteButton" class="btn btn-primary2">Delete</button>
                    <button type="button" id="newButton" class="btn btn-primary2">New</button>
                    <button type="submit" class="btn btn-primary2">Save</button>
                </div>
        </form>
    </section>

    <!-- Attachment History Section -->
    <section class="bg-white shadow-sm border border-gray-200 rounded-xl p-6">
            <h2 style="color: white"  class="text-xl font-semibold text-gray-800 mb-4">Attachment History</h2>

        <div class="overflow-x-auto">
            <table class="min-w-full table-auto border-collapse text-sm text-left text-gray-700">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="p-2 border">Include</th>
                        <th class="p-2 border">Preview</th>
                        <th class="p-2 border">Doc Type</th>
                        <th class="p-2 border">File Path</th>
                        <th class="p-2 border">Reference</th>
                        <th class="p-2 border">User</th>
                        <th class="p-2 border">Upload Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DocumentHistory)
                    {
                        <tr class="border-t hover:bg-gray-50">
                            <td class="p-2"><input type="checkbox" class="history-checkbox" @(item.Include ? "checked" : "") /></td>
                            <td class="p-2">
                                    <button type="button"
                                            class="preview-btn px-3 py-1 bg-blue-500 text-white text-xs rounded-md hover:bg-blue-600"
                                            data-id="@item.Id">
                                        Preview
                                    </button>

                            </td>
                            <td class="p-2">@item.Type</td>
                            <td class="p-2">@item.FilePath</td>
                            <td class="p-2">@item.Reference</td>
                            <td class="p-2">@item.User</td>
                            <td class="p-2">@item.UploadDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>

<script>

            $('#DocsForm').on('submit', function (event) {
            event.preventDefault();

            var form = document.getElementById('DocsForm');
            var formData = new FormData(form);

            $.ajax({
                url: form.action,
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    alert('Document uploaded successfully!');
                    window.location.href = '@Url.Action("Index", "Home")';
                },
                error: function (xhr, status, error) {
                    alert('Upload failed: ' + error);
                }
            });
        });

          
        $(document).on('click', '.preview-btn', function () {
            const docId = $(this).data('id');

            if (!docId) {
                alert('Invalid document ID');
                return;
            }

            const previewUrl = `/DocumentManager/PreviewFile?id=${docId}`;

            // Open in new tab
            window.open(previewUrl, '_blank');
        });


                    // Double-click event on table row
            $('table tbody tr').on('dblclick', function () {
                console.log("enter double click");
                var row = $(this);
                const id = row.find('.preview-btn').data('id');
                var type = row.find('td:eq(2)').text().trim();
                var FilePath = row.find('td:eq(3)').text().trim();
                var reference = row.find('td:eq(4)').text().trim();

                console.log("Id", id);


                $('#DocId').val(id);
                $('#DocType').val(type);
                $('#Reference').val(reference);
                $('#existingFileName').text(FilePath ? `Previously uploaded: ${FilePath}` : '');
            });

                    // Delete button click event
            $('#deleteButton').on('click', function () {
                var DocId = $('#DocId').val();
                console.log("Doc Id", DocId);

                if (!DocId ) {
                    alert("Missing required information for delete.");
                    return;
                }

                if (!confirm("Are you sure you want to delete this attachment entry?")) {
                    return;
                }

                $.ajax({
                    url: '@Url.Action("DeleteAttachment", "DocumentManager")',
                    type: 'POST',
                    data: {
                        DocId : DocId
                    },
                    success: function (response) {
                        alert("Attachment deleted successfully.");
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        alert("Error deleting Attachment: " + error);
                    }
                });
            });


                        // new record
                $('#newButton').on('click', function () {
                $('#DocType').val("");
                $('#Reference').val("");
                $('#existingFileName').text("");

            });


</script>
</body>
</html>